#include "main.h"

/**
 * flip_bits â€“ counts number of bits to change
 * @n: first number
 * @m: second number
 *
 * Return: number of bits to change
 */
unsigned int flip_bits(unsigned long int n, unsigned long int m)
{
	int j, cnt = 0;
	unsigned long int crnt;
	unsigned long int exclsv = n ^ m;

	for (j = 63; j >= 0; j--)
	{
		crnt = exclsv >> j;
		if (crnt & 1)
			cnt++;
	}

	return (cnt);
}
